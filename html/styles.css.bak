body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.header-top {
    background-color: #800000;
    padding: 20px;
    text-align: center;
}

.header-top img {
    max-width: 200px;
}

.main-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    background-color: #d30000;
    justify-content: center;
}

.main-menu ul li {
    margin: 0 15px;
}

.main-menu ul li a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    padding: 10px 20px;
    display: block;
}

.breadcrumbs {
    margin: 20px;
    font-size: 14px;
}

.breadcrumbs a {
    text-decoration: none;
    color: #007bff;
}

h2 {
    text-align: center;
    margin-bottom: 20px;
}

.content {
    display: flex;
    justify-content: space-around;
    padding: 20px;
}

.sidebar {
    width: 20%;
    background-color: #f0f0f0;
    padding: 20px;
}

.sidebar h3 {
    border-bottom: 2px solid black;
    margin-bottom: 10px;
}

.sidebar ul {
    list-style: none;
    padding: 0;
}

.sidebar ul li {
    margin-bottom: 10px;
}

.sidebar ul li a {
    text-decoration: none;
    color: red;
}

.profile img {
    max-width: 300px;
    border-radius: 5px;
}
